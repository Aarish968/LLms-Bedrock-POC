# Environment Configuration
RUN_ENV=dev
POC=true

# Database Configuration
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_ROLE=your_role

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# AWS Cognito (if using)
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_APP_CLIENT_ID=your_client_id
AWS_REGION=us-east-1

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Auto-save settings
AUTO_SAVE_RESULTS=true
AUTO_SAVE_TO_DATABASE=true
RESULTS_DIRECTORY=analysis_results

# Base View Table Configuration
BASE_VIEW_TABLE=CPS_DB.CPS_DSCI_BR.BASE_NAMES

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Column Lineage API
VERSION=0.1.0
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]